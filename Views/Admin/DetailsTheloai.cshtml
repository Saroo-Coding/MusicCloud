@model IEnumerable<MusicCloud.Models.Baihat>

@{
    ViewBag.Title = "DetailsTheloai";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}

<h2>Các bài hát thuộc thể loại này</h2>

<form action="/Admin/DetailsTheloai/@ViewBag.IDTL" method="post">
    <input name="idtl" style="display:none;" value="@ViewBag.IDTL" />
    @Html.DropDownList("idSong", (IEnumerable<SelectListItem>)ViewBag.idSong, "Chọn bài hát muốn thêm ", new { @style = "font-size: large; width:25%;padding: 5px;" })
    <button class="btn btn-success" style="margin-bottom: 4px;" type="submit"><span class="glyphicon glyphicon-plus"></span> Thêm bài</button>
</form>
<table class="table">
    <tr>
        <th>
            Tên bài
        </th>
        <th>
            Ca sĩ
        </th>
        <th>
            Source
        </th>
        <th>
            Ảnh bìa
        </th>
        <th>
            Lượt thích
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.tenSong)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.ngheDanh)
            </td>
            <td style="vertical-align: middle">
                <a href="@Html.DisplayFor(modelItem => item.link)" target="_blank">@Html.DisplayFor(modelItem => item.tenSong)</a>
            </td>
            <td style="vertical-align: middle">
                <img src="@Url.Content(@item.imgSong)" style="width:120px" />
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.countLike)
            </td>
            <td style="vertical-align: middle">
                <form action="/Admin/XoaKhoiTheloai/@item.idSong" method="post">
                    <input name="idtl" style="display:none;" value="@ViewBag.IDTL" />
                    <button type="submit" class="btn btn-danger"><p>Xóa khỏi thể loại</p><span class="glyphicon glyphicon-trash"></span></button>
                </form>
            </td>
        </tr>
    }

</table>

<style>
    td, th {
        text-align: center;
    }
</style>

