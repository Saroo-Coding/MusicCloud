@model MusicCloud.Models.Singer
<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: 'textarea' });</script>
@{
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}

<h2>Nhập thông tin</h2>

@using (Html.BeginForm("CreateUpdateCasi", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Tên ca sĩ:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenCasi, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Nghệ danh:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ngheDanh, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name="file" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tiểu sử:</label>
            <div class="col-md-10">
                @if (Model==null)
                {
                    <textarea name="tieusu"></textarea>
                }
                else
                {
                    <textarea name="tieusu">@Html.Raw(Model.tieuSu)</textarea>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Ngày sinh:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "date" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Giới tính:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.gioiTinh, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Quốc gia:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.quocGia, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model == null)
                {
                    <input type="submit" value="Thêm" class="btn btn-default" />
                }
                else
                {
                    <input type="submit" value="Sửa" class="btn btn-default" />
                }
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-success" onclick="window.location.href='/Admin/Casi'"><span class="glyphicon glyphicon-share-alt"></span>Quay lại</button>
</div>
